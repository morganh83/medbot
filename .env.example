# Discord Bot Token (get from https://discord.com/developers/applications)
DISCORD_TOKEN=PUT_YOUR_TOKEN_HERE

# Discord Channel IDs (enable Developer Mode, right-click channel → Copy ID)
JOIN_INTAKE_CHANNEL_ID=0
BOOKINGS_CHANNEL_ID=0
DISPATCH_CHANNEL_ID=0
DISPATCH_PING_ROLE_ID=0

# Optional: Discord role required to resolve incidents (0 = use manage_messages permission)
DISPATCH_ROLE_ID=0

# Create incident thread automatically when dispatch is created
CREATE_INCIDENT_THREAD=true

# Public base URL for GPS links (use Cloudflare Tunnel URL or ngrok)
# Example: https://app.nhstreetmedics.com
PUBLIC_BASE_URL=https://example.com

# Bot web server settings (internal bind address)
WEB_BIND_HOST=0.0.0.0
WEB_BIND_PORT=8080

# Shared secret for webhook authentication (generate random string)
# This MUST match the BOT_SECRET in your Cloudflare Worker
WEBHOOK_SHARED_SECRET=CHANGE_ME

# Optional: LocationIQ API key for geocoding features (free tier available)
# Get from: https://locationiq.com/
LOCATIONIQ_API_KEY=

# Database path
DB_PATH=medbot.db

# CSV export settings
EXPORT_CSV=true
CSV_EXPORT_PATH=incidents_export.csv

# SheetDB API URL for certification/role data sync (optional)
# Get from: https://sheetdb.io/
SHEETDB_API_URL=

# Path to roles config JSON (default: roles_config.json)
ROLES_CONFIG_PATH=roles_config.json

# Channel where role approval requests are posted (0 = disabled)
APPROVAL_CHANNEL_ID=0

# Dev guild ID for instant command sync (0 = global sync for production)
# Right-click your dev server → Copy Server ID
DEV_GUILD_ID=0
